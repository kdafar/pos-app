{
  appId: "com.majestic.pos",
  productName: "POS App",
  directories: { output: "release/${version}" },
  files: [
    "package.json",
    "out/main/**",
    "out/preload/**",
    "out/renderer/**"
  ],
  asarUnpack: [
    "node_modules/better-sqlite3/**/*",
    "node_modules/keytar/**/*",
    "node_modules/bufferutil/**/*",
    "node_modules/utf-8-validate/**/*"
  ],
  win: {
    target: ["portable", "nsis"],
    icon: "build/icon.ico"
  },
  nsis: { oneClick: true }
}
